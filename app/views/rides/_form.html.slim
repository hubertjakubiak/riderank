= form_for(@ride) do |f|
  = render partial: 'shared/errors', locals: {object: @ride}
  .field.form-group
    = f.label :date
    br
    = f.date_field :date, class: 'form-control'
  .field.form-group
    = f.label :start_address
    br
    = f.text_field :start_address, class: 'form-control'
  .field.form-group
    = f.label :destination_address
    br
    = f.text_field :destination_address, class: 'form-control'
  .field.form-group
    = f.label :payment_amount
    br
    = f.number_field :payment_amount, class: 'form-control'
  .field.form-group
    = f.label :company
    br
    = f.collection_select(:company_id, Company.all, :id, :name, {prompt: true}, {class: 'form-control'})
  .actions
    = f.submit class: 'btn btn-primary'



    